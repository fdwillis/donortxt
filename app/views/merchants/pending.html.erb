<% if current_user && current_user.admin? %>
	<h1>Pending Merchants</h1>
	<% @pending.each do |mer| %>
		<div class='row'>  
			<div class='col-md-3'>
			  <%= mer.username.capitalize %>
			  <%= link_to "Approve Merchant", approve_account_path(id: mer.id), class: 'btn btn-success', method: :put %>
			</div>
		</div>
	<% end %>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox float-e-margins">
              <div class="ibox-title">
                  <h5>Pending Accounts</h5>
              </div>
              <div class="ibox-content">
                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
                  <thead>
                    <tr>
                      <th data-toggle="true">Name</th>
                      <th>Username</th>
                      <th data-hide="all" class='col-md-6'>Company</th>
                      <th data-hide="all">Completed</th>
                      <th data-hide="all">Task</th>
                      <th data-hide="all">Date</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Project - This is example of project</td>
                      <td>Patrick Smith</td>
                      <td>Inceptos Hymenaeos Ltd</td>
                      <td><span class="pie">0.52/1.561</span></td>
                      <td>20%</td>
                      <td>Jul 14, 2013</td>
                      <td><a href="#"><i class="fa fa-check text-navy"></i></a></td>
                    </tr>
                  </tbody>
                </table>
              </div>
          </div>
      </div>
  </div>
</div>

<script src="/assets/footable.all.min.js"></script>
<script>
  $(document).ready(function() {

      $('.footable').footable();
      $('.footable2').footable();

  });

</script>