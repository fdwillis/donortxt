<h1>Listing Products</h1>
<%= link_to 'New Product', new_product_path %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= image_tag(product.product_image) %></td>
        <td><%= link_to "Buy Now", charges_path(price: product.price * 100, title: product.title), method: :post, data: { confirm: "Purchase #{product.title.titleize} now?" }  %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
