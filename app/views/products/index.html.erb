<h1>Listing Products</h1>
<%= link_to 'New Product', new_product_path %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td>$<%= number_with_precision(product.price, precision: 2) %></td>
        <td><%= image_tag(product.product_image) %></td>
        <% if current_user %>  
          <% if current_user.purchases %>  
            <% unless current_user.purchases.map(&:product_id).include?(product.id) && !current_user.purchases.find_by(product_id: product.id).refunded %>
              <td><%= link_to "Buy Now", charges_path(price: product.price * 100, title: product.title, product_id: product.id, product_image: product.product_image, merchant_id: product.user_id), method: :post, data: { confirm: "Purchase #{product.title.titleize} now for $#{product.price}?" }  %></td>
            <% end %>
          <% end %>
        <% else %>
        <td><%= link_to "Buy Now", charges_path(price: product.price * 100, title: product.title, product_id: product.id, product_image: product.product_image, merchant_id: product.user_id), method: :post, data: { confirm: "Purchase #{product.title.titleize} now for $#{product.price}?" }  %></td>
        <% end %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
