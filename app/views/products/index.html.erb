<div class='container'>  
  <h1>Listing Products</h1>
  <% if policy(Product.new).new? %>
    <%= link_to 'New Product', new_product_path %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody id='products'>
      <%= render 'product' %>
    </tbody>
  </table>
  <%= will_paginate @products %>
</div>