<div class='container'>  
  <h1>Listing Products</h1>
  <% if policy(Product.new).new? %>
    <%= link_to 'New Product', new_product_path %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= number_to_currency(product.price, precision: 2) %></td>
          <td><%= image_tag(product.product_image.url(:p200x200)) %></td>
          <% if current_user %>  
            <% if current_user.purchases %>  
              <% unless current_user.purchases.map(&:product_id).include?(product.id) && !current_user.purchases.find_by(uuid: product.uuid).refunded %>
                <td>
                  <%= link_to "Buy Now", "##{product.uuid}", class: 'btn btn-primary', 'data-toggle' => 'modal' %>

                  <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="<%= product.uuid %>">
                    <div class="modal-dialog modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class='text-center'> Review Purchase Of <%= product.title %> </h1>
                        </div>
                        <%= form_tag purchases_path(uuid: product.uuid, price: ((product.price * 100) + (product.price * product.user.tax_rate)), title: product.title, product_id: product.id, product_image: product.product_image, merchant_id: product.user_id) do %>
                          <div class="modal-body">
                            <div class="container-fluid">  
                                <div class="col-md-9">
                                </div>
                                <div class="col-md-3">  
                                  <h3>Quantity <small><%=product.quantity%> Remaining</small></h3>
                                  <%= number_field_tag :quantity, class: 'form-control' %>
                                  <h3>Shipping Options</h3>
                                  <% product.shipping_options.each do |shipping| %>
                                    <p><%= radio_button_tag(:shipping_option, (shipping.price * 100)) %> <%= shipping.title.titleize %>: <%= number_to_currency(shipping.price, precision: 2) %></p>
                                  <% end %>
                                  <h3>Ship To</h3>
                                  <% current_user.shipping_to.each do |s| %>
                                    <p> <%= radio_button_tag(:ship_to, s )%> <%= s %></p>
                                  <% end %>
                                  <h3>Refund Policy</h3>
                                  <%= radio_button_tag(:refund_agreement, "I Agree") %> Yes, I Agree
                                </div>
                            </div>
                          </div>
                          <div class="modal-footer actions">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                            <%= submit_tag "Submit Order", class: 'btn btn-success' %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>

                  <%= link_to "Buy Now", charges_path(uuid: product.uuid, price: ((product.price * 100) + (product.price * product.user.tax_rate)), title: product.title, product_id: product.id, product_image: product.product_image, merchant_id: product.user_id), method: :post, data: { confirm: "Purchase #{product.title.titleize} now for #{number_to_currency((((product.price * product.user.tax_rate)/100) + product.price), precision:2)}?\nIncludes 5.0% Non-Refundable Application Fee" }, id: 'stripeForm'  %>
                </td>
              <% end %>
            <% end %>
          <% else %>
            <td>
              <%= link_to "Buy Now", charges_path(uuid: product.uuid, price: product.price * 100, title: product.title, product_id: product.id, product_image: product.product_image, merchant_id: product.user_id), method: :post, data: { confirm: "Purchase #{product.title.titleize} now for #{number_to_currency(product.price, precision:2)}?\nIncludes 5.0% Non-Refundable Application Fee" }, id: 'stripeForm'  %>
            </td>
          <% end %>
          <td><%= link_to 'Show', product %></td>
          <% if policy(product).edit? %>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>