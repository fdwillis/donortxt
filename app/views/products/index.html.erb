<div class='container'>  
  <h1>Listing Products</h1>
  <% if policy(Product.new).new? %>
    <%= link_to 'New Product', new_product_path %>
  <% end %>
  <%= search_form_for @search do |f| %>
    <div class='row'>  
      <div class='col-md-3 form-group'>
        <%= f.text_field :title_cont, class: 'form-control text-center', placeholder: 'Title or Name of Products' %>
      </div>
      <div class='col-md-3 form-group'>
        <%= f.text_field :description_cont, class: 'form-control text-center', placeholder: 'Description' %>
      </div>
      <div class='col-md-3 form-group'>
        <%= f.text_field :keywords_cont, class: 'form-control text-center', placeholder: 'Keywords' %>
      </div>
    </div>
    <div class='actions'>
      <%= f.submit "Search", class: 'btn btn-success' %>
    </div>
  <% end %>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody id='products'>
      <%= render 'product' %>
    </tbody>
  </table>
  <%= will_paginate @products %>
</div>