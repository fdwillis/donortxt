<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-md-8">
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter Title", label: false %>
      </div>
      <div class="form-group" id='ProjectListButton'>
        <%= f.number_field :price, class: 'form-control pricing', placeholder: "Enter price", label: false, step: 'any' %>
      </div>
      <div class="form-group" id='ProjectListButton'>
        <%= f.number_field :quantity, class: 'form-control pricing', placeholder: "Enter Quantity", label: false %>
      </div>
      <div class="form-group" id='ProjectListButton'>
        <%= f.text_field :tag_list, class: 'form-control pricing', placeholder: "Blue, Box, Paint", label: "Tags (Seperated By Commas)" %>
      </div>
      <div class="form-group" id='ProjectListButton'>
        <%= f.text_area :description, class: 'form-control pricing', placeholder: "Enter Description", label: false, size: '50x50' %>
      </div>
      <div class="form-group">
        <%= f.file_field :product_image, as: :file, label: 'Product Image (extensions: .jpeg, .png, .gif)' %>
      </div>
      <%= f.hidden_field :uuid, class: 'form-control', label: false, value: SecureRandom.uuid %>
    </div>
    <div class="col-md-4">
      <h3>Shipping Options</h3>
      <%= f.fields_for :shipping_options do |option| %>
        <%= render 'shipping_option_fields', f: option %>
      <% end %>
        <div class="links">
          <%= link_to_add_association 'Add Shipping Option', f, :shipping_options %>
        </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>