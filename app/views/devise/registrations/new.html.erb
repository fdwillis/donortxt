<div class="middle-box text-center loginscreen   animated fadeInDown">
  <div class='row form-group'>
    <h3>Register for <%= ENV['MARKETPLACE_NAME'] %></h3>
    <p>Create account to get started.</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>  
        <div class="alert alert-danger">
          <h2>Error</h2>
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control text-center' %>
      </div>

      <div class="field form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, required: true, class: 'form-control text-center' %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control text-center' %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control text-center' %>
      </div>

      <div class='field form-group'>
        <%= f.check_box :agreed_to_terms, required: true %> I accept <%= link_to "Terms and Conditions", terms_path, 'target' => '_blank' %>
      </div> 

      <div class="actions form-group">
        <%= f.submit "Sign up", class: 'btn btn-primary col-md-12' %>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <%= render "devise/shared/links" %>
  </div>
</div>

